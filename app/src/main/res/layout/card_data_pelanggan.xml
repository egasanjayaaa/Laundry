<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraint,MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Pelanggan"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/namapelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/id_pelanggan"
            android:text="Nama Pelanggan">

            <TextView
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/namapelanggan"
                android:text="Alamat">

            <TextView
                android:id="@+id/nohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/alamat"
                android:text="No Hp">
        </TextView>

            <Button
                android:id="@+id/btsimpan"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:text="SIMPAN"
                app:layout_constraintTop_toBottomOf="@id/nohp"
                tools:layout_editor_absoluteX="16dp"
                app:layout_editor_absoluteY="7dp"/>

            <Button
                android:id="@+id/btlihat"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="64dp"
                android:backgroundTint="#E6B238"
                android:text="LIHAT"
                app:layout_editor_absoluteY="7dp"
                app:layout_constraintStart_toEndOf="@id/btsimpan"
                tools:layout_editor_absoluteY="152dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>