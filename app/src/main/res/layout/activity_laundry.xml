<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F4FA"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi, Ega"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08 Januari 2025"
        android:textSize="16sp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="8dp" />

    <!-- CardView for Estimation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEstimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Icon -->

            <!-- Text Content -->

            <ImageView
                android:id="@+id/transaksi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/transaction"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="46dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:text="Transaksi"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/transaksi"
                tools:layout_editor_absoluteX="32dp" />

            <ImageView
                android:id="@+id/pelanggan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:src="@drawable/pelanggan"
                app:layout_constraintStart_toEndOf="@id/transaksi"
                tools:layout_editor_absoluteY="46dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Pelanggan"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/pelanggan"
                tools:layout_editor_absoluteX="157dp" />

            <ImageView
                android:id="@+id/laporan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:src="@drawable/laporan"
                app:layout_constraintStart_toEndOf="@id/pelanggan"
                tools:layout_editor_absoluteY="46dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:text="Laporan"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/laporan"
                tools:layout_editor_absoluteX="263dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 40.000,-"
                android:textColor="#FF5722"
                android:textSize="20sp"

                tools:layout_editor_absoluteX="240dp"
                tools:layout_editor_absoluteY="3dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/estimasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimasi Hari Ini"
                android:textColor="#333333"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="4dp"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Text for Service Information -->
    <TextView
        android:id="@+id/serviceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siap melayani pelanggan dengan setulus hati"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardEstimation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp" />

    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jangan Kecewakan Pelanggan"
        android:textSize="14sp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/serviceText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="4dp" />

    <!-- Grid of Menu Cards -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/warningText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp">

        <!-- Card for Akun -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gap="16dp">

            <!-- Akun Button -->

            <!-- Layanan Button -->

            <LinearLayout
                android:layout_marginTop=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Akun"
                    android:src="@drawable/akun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Akun"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/layanan"
                    android:contentDescription="Layanan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Layanan"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Tambahan Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/plus"
                    android:contentDescription="Tambahan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahan"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Pegawai Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/pegawai"
                    android:contentDescription="Pegawai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pegawai"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Cabang Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/cabang"
                    android:contentDescription="Cabang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabang"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Printer Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/printer"
                    android:contentDescription="Printer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Printer"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

               </GridLayout>


        <!-- Tambahkan elemen lain sesuai urutan gambar -->
        <!-- Tambahan CardView bisa diatur dengan properties Constraint -->
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
