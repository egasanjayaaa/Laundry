<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvCARD_PILIH_PELANGGAN"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#699DC7"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvCARD_PELANGGAN_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[1]"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCARD_pilih_pelanggan_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan  : "
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCARD_pilih_pelanggan_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat                   : "
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCARD_pilih_pelanggan_nohp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor HP             : "
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
