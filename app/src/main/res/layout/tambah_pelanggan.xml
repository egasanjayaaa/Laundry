<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    android:padding="20dp"
    tools:context=".pelanggan.TambahPelangganActivity">

    <TextView
        android:id="@+id/tvtambahkan_pelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/tambah_pelanggan"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface"
        android:textSize="26sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/namalengkap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:text="@string/namalengkap"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvtambahkan_pelanggan" />

    <EditText
        android:id="@+id/etnama_lengkap"
        android:background="@drawable/rounded_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="@string/namalengkap"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOutline"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/namalengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/alamat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="0dp"
        android:text="@string/alamat"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etnama_lengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etalamat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/alamat"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOutline"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/alamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/NoHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="0dp"
        android:text="@string/nohp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etalamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etNoHp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp"
        android:inputType="phone"
        android:hint="@string/nohp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOutline"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/NoHp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cabang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="0dp"
        android:text="@string/cabang"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etNoHp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etcabang"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="8dp"
        android:hint="@string/cabang"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOutline"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btsimpanpelanggan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="@string/simpan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/etcabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>